<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/priceCalculator.js"></script>
    <link href="~/public/css/HomePage.css" rel="stylesheet" />
    <link href="~/public/css/Layout/Header.css" rel="stylesheet" />
</head>
<body>
    <!--Header-->
    <header class="main-header">
        <nav class="main-header__nav navbar navbar-expand-lg">
            <ul class="navbar-nav">
                <li class="main-header__item">
                    <div class="nav-item">
                        <a href="/" class="nav-link">HiFiShopee</a>
                    </div>
                </li>
                <li class="main-header__item">
                    <div class="nav-item">
                        <a href="#" class="nav-link">Home</a>
                    </div>
                </li>
                <li class="main-header__item">
                    <div class="nav-item">
                        <a href="#" class="nav-link">Display</a>
                    </div>
                </li>
                <li class="main-header__item">
                    <div class="nav-item">
                        <a href="#" class="nav-link">Cart</a>
                    </div>
                </li>
                <li class="main-header__item">
                    <div class="nav-item">
                        <input type="button" class="nav-link" id="btnLogout" value="Logout" onclick="location.href='@Url.Action("Logout","Login")'"/>
                        @*@Html.ActionLink("Logout", "Logout", "Login", new { @class = "nav-link" } )*@
                    </div>
                </li>
            </ul>
        </nav>
    </header>
    <!--Body-->
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    <!--Footer-->
    <footer class="card-footer" style="background-color:#00695c">
        <p style="color:aliceblue">&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
